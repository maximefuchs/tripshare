<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.maxime.tripshare.pageDetails.DisplayFragment"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#A333">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ivDiplay"
        android:layout_margin="10dp"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/llStory"
        android:visibility="gone"
        android:padding="20dp"
        android:background="@drawable/rounded_corners">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:id="@+id/etStory"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">

            <ProgressBar
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/storyBuffer"
                android:visibility="gone"
                android:layout_margin="10dp"
                android:layout_gravity="center_vertical"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save story"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#4A4"
                android:background="@color/transparent"
                android:id="@+id/btnSave"/>

        </LinearLayout>


    </LinearLayout>




</LinearLayout>