<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.maxime.tripshare.homePage.FavouritesFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Faved Trips"
        android:textSize="25dp"
        android:textColor="#FFF"
        android:layout_centerHorizontal="true"
        android:id="@+id/tvPres"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/white_line"
        android:layout_below="@id/tvPres"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/sep"/>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/sep"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lvTrips"
        android:longClickable="true"
        android:clickable="true"
        android:scrollbars="vertical"
        android:fadeScrollbars="true">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>